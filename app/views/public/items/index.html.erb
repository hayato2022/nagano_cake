<div class="container">
  <div class="row">
    <!--サイドバー（ジャンル検索）-->
    <div class="col-md-3 ">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
          <tbody class="table table-borderless">
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
            <% end %>
          </tbody>
        </thead>
      </table>
    </div>

  <!--ジャンル、商品一覧-->
    <div class="col-md-8 offset-md-1">
      <h3>商品一覧</h3>
      <% @items.each do |item| %>
        <div class = "col">
          <%= image_tag item.image, size: "200x150" %>
          <p><%= item.name %></p>
          <p><%= item.price %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>