<div class="col-md-3 ">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
          <tbody class="table table-borderless">
            <% genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to items_path(genre_id: genre.id) do %>
                  <%= genre.name %>
