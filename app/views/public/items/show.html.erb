<div class="container">
  <div class="row">
     <!--サイドバー（ジャンル検索）-->
    <%= render "genres_sidebar", genres: @genres %>

    <!--商品詳細-->
    <div class="col">
      <%= image_tag @item.get_image(400,350) %>
    </div>
    <div class="col">
      <h4><strong><%= @item.name %></strong></h4>
      <h5><%= @item.introduction %></h5>
      <h5>¥<%= @item.add_tax_price.to_s(:delimited) %></h5>

      <%= form_with model: @cart_item, url: cart_items_path, method: :post, class: "form-inline" do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
          <div class="form-group mr-5 mt-5">
            <%= f.select :amount, *[1..10], prompt: "個数選択" %>
          </div>
          <div class="form-group mt-5">
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
          </div>
      <% end %>
    </div>
  </div>
</div>

