<%= form_with model: @customer, url: customer_registration_path, id: 'new_cutomer', class: 'new_cutomer' do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-9">

      <div class="row  mt-3 mb-5">
        <div class="col-lg-3 ml-5">
          <h4 class="text-center" >新規会員登録</h4>
          <%= render "public/shared/error_messages", resource: resource %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4">
          <p>名前</p>
        </div>
        <div class="col-lg-1">
          <%= f.label :last_name, "(性)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :last_name, class: "rounded" %>
        </div>
        <div class="col-lg-1">
          <%= f.label :first_name, "(名)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name, class: "rounded" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4">
          <p>フリガナ</p>
        </div>
        <div class="col-lg-1 px-1">
          <%= f.label :last_name_kana, "(セイ)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :last_name_kana, class: "rounded" %>
        </div>
        <div class="col-lg-1 px-1">
          <%= f.label :first_name_kana, "(メイ)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name_kana, class: "rounded" %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-lg-5">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %>
        </div>
        <div class="col-lg-4"></div>
      </div>
      <div class="row mb-2">
        <div class="col-lg-5">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, class: "rounded" %>
        </div>
        <div class="col-lg-4"></div>
      </div>

      <div class="row mb-2">
        <div class="col-lg-5">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-lg-7">
          <%= f.text_field :address, size: 59, class: "rounded" %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-lg-5">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, class: "rounded" %>
        </div>
        <div class="col-lg-4"></div>
      </div>
      <div class="row mb-2">
        <div class="col-lg-5">
          <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %>
        </div>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "rounded" %>
        </div>
        <div class="col-lg-4"></div>
      </div>

      <div class="row mb-4">
        <div class="col-lg-5">
          <%= f.label :password_confirmation, "パスワード確認用"%>
        </div>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded" %>
        </div>
        <div class="col-lg-4"></div>
      </div>

      <div class="row">
        <div class="col-lg-5"></div>
        <div class="col-lg-3">
          <%= f.submit "新規登録", class: "btn btn-success  btn-block" %>
        </div>
        <div class="col-lg-4"></div>
      </div>

      <div class="row mb-3">
        <div class="col-lg-4 ml-3">
          <h4 class="text-center">既に登録済みの方</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 ml-5">
          <p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
        </div>
      </div>

    </div>

    <div class="col-lg-3"></div>
  </div>

</div>
<% end %>