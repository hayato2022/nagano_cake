<div class="container">
  <div class="row">
    <!--サイドバー（ジャンル検索）-->
    <%= render "genres_sidebar", genres: @genres %>
  <!--ジャンル、商品一覧-->
    <div class="col-md-8 offset-md-1">
      <h3><%= @item_name %>一覧</h3>
      <% @items.each do |item| %>
        <div class = "col">
          <%= link_to item_path(item.id), class: "text-dark" do %>
            <%= image_tag item.get_image(200,150) %>
            <p><%= item.name %></p>
            <p><%= item.price %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>