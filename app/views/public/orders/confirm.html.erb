<div class="container">
  <h4>注文情報確認</h4>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.image, size: "70x50" %>  <strong><%= cart_item.item.name %></strong></td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
          <%  @total  %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active">送料</td>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <td class="table-active">商品合計</td>
            <td><%= @total %></td>
          </tr>
          <tr>
            <td class="table-active">請求金額</td>
            <td><%= @amount_billed %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class= "col">
      <p><strong>支払方法</strong></p>
    </div>
    <div class="col">
      <p><%= @payment_method %></p>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p><strong>お届け先</strong></p>
    </div>
    <div class="col">
      <p>
        〒<%= @order.postal_code %><%= @order.address %></br>
        <%= @order.name %>
      </p>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :postage, :value =>  @postage %>
      <%= f.hidden_field :amount_billed, :value => @amount_billed %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>