<div class="container">
  <h4>注文履歴一覧</h4>
  <div class="row">
    <table class="table table-bordered">
      <thead class="table-active">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= l order.created_at, format: :short %></td>
          <td>
            〒<%= order.postal_code %></br>
            <%= order.address %> </br>
            <%= order.name %>
          </td>

          <td>
            <!--@ordersで全取得した情報をeach文で一つずつデータを取り出している-->
            <!--そのデータorderを使って、orderに関連するorders_detailsのデータをeach文で取り出していく-->
            <% order.orders_details.each do |orders_detail| %>
            <%= orders_detail.item.name %></br>
            <% end %>
          </td>

          <td><%= order.amount_billed %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>