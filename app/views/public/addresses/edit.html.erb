<div class="container">
  <h3>配送先編集</h3>
  <div class="row">
    <%= form_with model: @address do |f| %>
    <div class="form-row">
      <div class="col">
        <%= f.label :郵便番号(ハイフンなし) %>
      </div>
      <div class="col">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= f.label :住所 %>
      </div>
      <div class="col">
        <%= f.text_field :address %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= f.label :宛名 %>
      </div>
      <div class="col">
        <%= f.text_field :name %>
      </div>
      <div class="col">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>
</div>