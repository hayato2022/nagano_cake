<div class="container">
  <h3>配送先登録/一覧</h3>
  <div class="row">
    <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
    <div class="form-row">
      <div class="col">
        <%= f.label :郵便番号(ハイフンなし) %>
      </div>
      <div class="col">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= f.label :住所 %>
      </div>
      <div class="col">
        <%= f.text_field :address %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= f.label :宛名 %>
      </div>
      <div class="col">
        <%= f.text_field :name %>
      </div>
      <div class="col">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table">
      <thead class="table-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-secondary" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>