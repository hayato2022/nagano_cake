<div class="container">
  <div class="row">
    <h4>ショッピングカート</h4>
    <div class="col">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead class="table-active">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if current_customer.cart_items.present? %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.image, size: "60x50" %> <%= cart_item.item.name %></td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %> </td>
          </tr>
          <%  @total += cart_item.subtotal %>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <div class="col">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active">合計金額</td>
            <td><%= @total %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  </div>
</div>
