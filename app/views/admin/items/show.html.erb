<div class="container">
  <div class="row ml-5 mt-4 mb-5">
    <div class="col-lg-1"></div>
    <div class="col-lg-2 text-center">
      <h4 class="text-color">商品詳細</h4>
    </div>
    <div class="col-lg-9"></div>
  </div>
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-4">
      <%= image_tag @item.get_image(450,200) %>
    </div>
    <div class="col-lg-7">
      <div class="row mb-1">
        <div class="col-lg-3">
          <p>商品名</p>
        </div>
        <div class="col-lg-4">
          <h5><%= @item.name %></h5>
        </div>
      </div>
      <div class="row mb-1">
        <div class="col-lg-3">
          <p>商品名</p>
        </div>
        <div class="col-lg-4">
          <h5><%= @item.name %></h5>
        </div>
      </div>
      <div class="row mb-1">
        <div class="col-lg-3">
          <p>商品説明</p>
        </div>
        <div class="col-lg-4">
          <h5><%= @item.introduction %></h5>
        </div>
      </div>
      <div class="row mb-1">
        <div class="col-lg-3">
          <p>ジャンル</p>
        </div>
        <div class="col-lg-4">
          <h5><%= @item.genre.name %></h5>
        </div>
      </div>
      <div class="row mb-1">
        <div class="col-lg-3">
          <p>
            税込価格 </br>
            (税抜価格)
          </p>
        </div>
        <div class="col-lg-4">
          <h5><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</h5>
        </div>
      </div>
      <div class="row mb-4">
        <% if @item.is_active? %>
        <div class="col-lg-3">
          <p>販売ステータス</p>
        </div>
        <div class="col-lg-4">
          <h5 class="text-success font-weight-bold">販売中</h5>
        </div>
        <% else %>
          <div class="col-lg-3">
            <p>販売ステータス</p>
          </div>
          <div class="col-lg-4">
            <h5 class="text-muted">販売停止中</h5>
          </div>
        <% end %>
      </div>
    <div class="row">
      <div class="col-lg-7 text-center">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-lg btn-success" %>
      </div>
    </div>
  </div>
</div>