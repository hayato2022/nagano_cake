<div class="container">
  <div class="row my-4 ml-2">
    <div class="col-lg-2 text-center">
      <h4 class="text-color">商品一覧</h4>
    </div>
    <div class="col-lg-8"></div>
    <div class="col-lg-2">
      <p>
        <%= link_to new_admin_item_path, class: "icon" do %>
          <i class="fas fa-plus-circle"></i>
        <% end %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id), class: "text-dark" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
              <% if item.is_active?  %>
                 <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                  <p class="text-muted font-weight-bold">販売停止中</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4 text-center">
      <%= paginate @items %>
    </div>
    <div class="col-4"></div>
    </div>
</div>