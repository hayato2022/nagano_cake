<h2>商品新規登録</h2>
<%= form_with model: @item do |f| %>
  <div class="field">
    <%= f.label :商品画像 %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction %>
  </div>
  <div class="field">
    <%= f.label :ジャンル %>
    <%= f.select :genre_id,
  </div>
<% end %>