<h2>商品新規登録</h2>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :商品画像 %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name, placeholder: "商品名" %>
  </div>
  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
  </div>
  <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "--選択肢を選んでください--" %>
  </div>
 <div class="form-group">
    <%= f.label :税抜価格 %>
    <p><%= f.text_field :price, placeholder: "1000" %>円</p>
  </div>
  <div class="form-group">
    <p>販売ステータス</p>
    <%= f.radio_button :is_active, 'true' %>
    <%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, 'false' %>
    <%= f.label :is_active, '販売停止中', value: false %>
  </div>
  <div class="field">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>