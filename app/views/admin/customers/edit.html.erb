<div class="container">
  <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    <div class="row">
      <div>
        <p>会員ID  <%= @customer.id %></p>
      </div>
    </div>
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <div class="row">
          <div class="col">
            <%= f.label :氏名 %>
            <%= f.text_field :last_name %>
          </div>
          <div class="col">
            <%= f.text_field :first_name %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.label :フリガナ %>
            <%= f.text_field :last_name_kana %>
          </div>
          <div class="col">
            <%= f.text_field :first_name_kana %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email %>
        </div>
        <div class="form-group">
          <%= label :会員ステータス %>
          <%= f.radio_button :is_active, 'true' %>
          <%= f.label :is_active, '有効', value: true %>
          <%= f.radio_button :is_active, 'false' %>
          <%= f.label :is_active, '退会', value: false %>
        </div>
      <% end %>
</div>
