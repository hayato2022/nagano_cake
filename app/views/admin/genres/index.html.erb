<h2>ジャンル一覧・追加</h2>

<!--ジャンル名投稿機能-->
<%= form_with model: @genre_new, url: admin_genres_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :ジャンル名　%>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<!--ジャンル名表示-->
<table class="table">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する",  edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>