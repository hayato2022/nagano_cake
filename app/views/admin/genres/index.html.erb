<%= form_with model: @genre_new, url: admin_genres_path, method: :post do |f| %>
  <div class="container">
    <div class="row mt-4 mb-5">
      <div class="col-lg-3 text-center">
        <h4 class="text-color">ジャンル一覧・追加</h4>
      </div>
      <div class="col-lg-9"></div>
    </div>
    <div class="row mb-5">
      <div class="col-lg-2 ml-2">
        <strong><%= f.label :name, "ジャンル名" %></strong>
      </div>
      <div class="col-lg-2">
        <%= f.text_field :name %>
      </div>
      <div class="col-lg-2 ml-5">
        <%= f.submit "新規登録", class: "btn btn-block btn-success" %>
      </div>
      <div class="col-lg-7"></div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th><strong>ジャンル</strong></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td></td>
                <td><%= link_to "編集する",  edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-lg-8"></div>
    </div>
  </div>
<% end %>