<%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
  <div class="container">
    <div class="row mt-4 mb-5 ml-5">
      <div class="col-lg-3 text-center">
        <h4 class="text-color">ジャンル編集</h4>
      </div>
      <div class="col-lg-9"></div>
    </div>
    <div class="row">
      <div class="col-lg-2">
        <strong><%= f.label :name, "ジャンル名" %></strong>
      </div>
      <div class="col-lg-2">
        <%= f.text_field :name %>
      </div>
      <div class="col-lg-2 ml-5">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
      <div class="col-lg-6"></div>
    </div>
  </div>
<% end %>