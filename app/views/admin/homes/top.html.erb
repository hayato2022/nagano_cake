<div class="container">
  <div class="row mt-4 mb-2">
    <div class="col-lg-3 text-center">
      <h4 class="text-color">注文履歴一覧</h4>
    </div>
    <div class="col-lg-9"></div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table class="table">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>

          <td>
            <%= link_to admin_order_path(order.id), class: "text-dark" do %>
              <%= l order.created_at %>
            <% end %>
          </td>

        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <!--購入者それぞれの注文した商品の合計の個数-->
        <% @amount_total = 0 %>
        <% order.orders_details.each do |orders_detail| %>
        <!--注文詳細の注文した商品の個数をそれぞれ取り出す-->
        <!--each文の中に注文の個数を足していく記述-->
        <% @amount_total += orders_detail.amount %>
        <% end %>
        <td><%= @amount_total %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>